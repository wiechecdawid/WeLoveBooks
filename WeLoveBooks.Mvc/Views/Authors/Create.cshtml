@model WeLoveBooks.Mvc.ViewModels.CreateAuthorViewModel
@{
	ViewData["Title"] = "Create Author";
}

<h2>Dodaj Autora</h2>

<form method="post" asp-controller="Authors" asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="mb-3">
        <label class="form-label" asp-for="FirstName">Imię:</label>
        <input type="text" asp-for="FirstName"class="form-control" />
        <span asp-validation-for="FirstName" class="text-warning"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="LastName">Nazwisko:</label>
        <input type="text" asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-warning"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="DateOfBirth">Data urodzenia:</label>
        <input asp-for="DateOfBirth" type="date" class="form-control" value=@DateTime.UtcNow />
        <span asp-validation-for="DateOfBirth" class="text-warning"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Bio">O autorze:</label>
        <input type="text" asp-for="Bio" class="form-control" />
        <span asp-validation-for="Bio" class="text-warning"></span>
    </div>
    <div class="mb-3">
        <input class="btn btn-primary" type="submit" value="Dodaj"/>
    </div>
</form>
