@model CreateReviewViewModel
@{
	ViewData["Title"] = "Create Review";
}

<h1>Dodaj recenzję: @Model.Book.Title</h1>
<form method="post" asp-controller="Review" asp-action="Create">
	<div asp-validation-summary="ModelOnly"></div>

    <input type="hidden" asp-for=Book value=@Model.Book.Id.ToString() />

    @{
        TempData["BookId"] = Model.Book.Id.ToString();
    }

	<div class="mb-3">
        <label class="form-label" asp-for="Title">Tytuł:</label>
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-warning"></span>
    </div>    
    <div class="mb-3">
        <label class="form-label" asp-for="Content">Treść:</label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-warning"></span>
    </div>
    <div class="mb-3">
        <input class="btn btn-primary" type="submit" value="Dodaj"/>
    </div>
</form>
