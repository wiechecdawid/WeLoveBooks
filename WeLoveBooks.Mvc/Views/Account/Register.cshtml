@model WeLoveBooks.Mvc.ViewModels.RegisterPageViewModel
@{
	ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="mb-3">
        <label class="form-label" asp-for="FirstName"></label>
        <input asp-for="FirstName"class="form-control" />
        <span asp-validation-for="FirstName" class="text-warning"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-warning"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Email"></label>
        <input class="form-label" asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-warning"></span>
    </div> 
    <div class="mb-3">
        <label class="form-label" asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-warning"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-warning"></span>
    </div>
    <div class="mb-3">
        <input class="btn btn-primary" type="submit" value="Register"/>
    </div>
</form>
